- post  = page["post"]
.post
  %h1.title
    %a{:href=>"#{post.url}"}= post.title
  .byline
    %p
      %em
        - if post.author
          = post.date.strftime('%B %d, %Y') + " by " + lookup_name(post.author);
        - else
          = post.date.strftime('%B %d, %Y');
      - if !post.tags.empty?
        %em
          = " under&nbsp;"
        - for tag in post.tags
          - if tag != nil
            %a.label.label-info{:href=>"#{tag.primary_page.url}"}<= tag.to_s
  ~ post.content
