- post  = page["post"]
.post
  .row{:style => "margin-left: 0; margin-right: 0; min-height: 100px;"}
    .col-sm-1{:style => "padding-left: 0px;"}
      %div{:style => "width: 72px; border: 1px solid #ccc; padding: 3px; margin-top: 22px;"}
        %img{:src => "#{lookup_avatar(post.author)}", :style => "width: 64px;"}
    .col-sm-11{:style => "padding-left: 8px;"}
      %h1.title{:style => "font-size: 30px; margin-bottom: 0px;"}
        %a{:href=>"#{post.url}"}= post.title
      .byline
        %p
          %em
            - if post.author
              = post.date.strftime('%B %d, %Y') + " by " + lookup_name(post.author);
            - else
              = post.date.strftime('%B %d, %Y');
          - if !post.tags.empty?
            %em
              = " |&nbsp;"
            - for tag in post.tags
              - if tag != nil && tag.to_s != "featured"
                %a.label.label-info{:href=>"#{tag.primary_page.url}"}<= tag.to_s
  .row{:style => "margin-left: 0; margin-right: 0;"}
    - if page.summary
      ~ post.summary
      - if post.summary != post.content
        %div{:class=>'read-more-div'}
          %a{:href=>post.url, :class=>'read-more'}
            Read More&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="icon-arrow-right"></span>
    - else
      ~ post.content